<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="ru.demetra.callrec.model.Call" table="cdr">
        <id name="id" column="uniqueid" type="java.lang.String">
            <generator class="increment"/>
        </id>

        <property name="callDate" column="calldate" type="java.lang.String"/>
        <property name="src" column="src" type="java.lang.String"/>
        <property name="dst" column="dst" type="java.lang.String"/>
        <property name="billsec" column="billsec" type="java.lang.Integer"/>
        <property name="recordingfile" column="recordingfile" type="java.lang.String"/>

    </class>

</hibernate-mapping>